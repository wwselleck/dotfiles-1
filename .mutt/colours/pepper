# colors - color configuration for mutt
# nick@dischord.org

# general colors
color attachment green     default
color bold       yellow    default
color error      red	   default
color markers    green     default
color message    white	   default
color signature  magenta   default
color tilde      brightred default
color tree       green     default
color underline  yellow    default
color status     color245   color235

# color email headers
color header    yellow     default  "^cc:"
color header    green      default  "^date:"
color header    yellow     default  "^from"
color header    cyan 	   default  "^from:"
color header    yellow     default  "^newsgroups:"
color header    yellow     default  "^reply-to:"
color header    cyan 	   default  "^subject:"
color header    green      default  "^to:"
color header    yellow     default  "^x-mailer:"
color header    yellow     default  "^message-id:"
color header    yellow     default  "^Organization:"
color header    yellow     default  "^Organisation:"
color header    yellow     default  "^User-Agent:"
color header    yellow     default  "^message-id: .*pine"


# color URLs
color body       brightcyan    default "(http|ftp|news|telnet|finger)://[^ \"\t\r\n]*"
color body       brightcyan    default "mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"

# color email addresses
color body       brightmagenta   default "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"

# quoted text
color quoted     green     default
color quoted1    cyan      default
color quoted2    red       default
color quoted3    magenta   default
color quoted4    blue      default

# misc
color index     green		default  ~N      	# new
color index     green		default  ~O      	# old
color index     green    	default  '~s tgil'
color index     default    	default  '~p'    	# mail to myself
color index		color247		default '~Q'		# replied
color index     cyan     	default  '~P'    	# mail from myself
color index     magenta		default  ~F      	# flagged
color index     blue		default  ~T      	# tagged
color index     red			default  ~D      	# deleted
color body      yellow		default  "[;:]-[)/(|]"   # colorise smileys
color body      yellow		default  "[;:][)/(|]"
color indicator		black	color7	


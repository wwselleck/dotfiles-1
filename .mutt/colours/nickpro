color header    color95     default  "^from"
color header    color25 	   default  "^from:"
color header    color95     default  "^newsgroups:"
color header    color95     default  "^reply-to:"
color header    color25 	   default  "^subject:"
color header    color70      default  "^to:"
color header    color95     default  "^x-mailer:"
color header    color95     default  "^message-id:"
color header    color95     default  "^Organization:"
color header    color95     default  "^Organisation:"
color header    color95     default  "^User-Agent:"
color header    color95     default  "^message-id: .*pine"

# URLs
color body       brightcolor25    default "(http|ftp|news|telnet|finger)://[^ \"\t\r\n]*"
color body       brightcolor25    default "mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"

# email addresses
color body       brightcolor90   default "[-a-z_0-9.%$]+@[-a-z_0-9.]+\\.[-a-z][-a-z]+"

# text
color quoted     color233     default
color quoted1    color235      default
color quoted2    color237       default
